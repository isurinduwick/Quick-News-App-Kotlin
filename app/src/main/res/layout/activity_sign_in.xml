<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbkg"
    tools:context=".SignIn">

    <!-- Animated Overlay -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/lavender"
        android:animateLayoutChanges="true"/>

    <!-- Animated Title Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="28dp"
        android:translationY="-50dp"
        android:animateLayoutChanges="true"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/baseline_newspaper_24"
            android:alpha="0.9"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:animateLayoutChanges="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="QUICK NEWS"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            android:alpha="0.9"
            android:animateLayoutChanges="true"/>
    </LinearLayout>

    <!-- Glassmorphic Login Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        android:background="@drawable/glass_card"
        android:layout_marginBottom="-20dp"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:animateLayoutChanges="true">

            <!-- Welcome Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome To Quick News"
                android:textColor="@color/deep_purple"
                android:textSize="32sp"
                android:textStyle="bold"
                android:animateLayoutChanges="true"/>

            <!-- Instructions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Please Login with Email and Password"
                android:animateLayoutChanges="true"/>

            <View android:layout_width="wrap_content" android:layout_height="30dp"/>

            <!-- Email Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Email Address"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/emailEt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableEnd="@drawable/done_icon"
                android:hint="Your Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:animateLayoutChanges="true"/>

            <View android:layout_width="wrap_content" android:layout_height="30dp"/>

            <!-- Password Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Password"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black"
                android:background="@drawable/input_field"
                android:animateLayoutChanges="true">

                <EditText
                    android:id="@+id/passEt"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableEnd="@drawable/done_icon"
                    android:hint="Your Password"
                    android:inputType="textPassword"
                    android:padding="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <View android:layout_width="wrap_content" android:layout_height="10dp"/>

            <!-- Animated Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Login"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/deep_purple"
                app:cornerRadius="32dp"
                android:elevation="8dp"
                android:animateLayoutChanges="true"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:text="Not Registered Yet? "
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:animateLayoutChanges="true"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
